    <script src="../css/style.css"></script>
    <script>
        // Price calculation variables
        let basePrice = 2000;
        let currentPrice = basePrice;

        // Initialize page
        document.addEventListener('DOMContentLoaded', function () {
            calculatePrice();
            initializePage();

            // Add event listeners for price calculation
            document.getElementById('standeeType').addEventListener('change', calculatePrice);
            document.getElementById('size').addEventListener('change', calculatePrice);
            document.getElementById('printType').addEventListener('change', calculatePrice);
            document.getElementById('printMedia').addEventListener('change', calculatePrice);
            document.getElementById('quantity').addEventListener('input', calculatePrice);
        });

        // Initialize page functionality
        function initializePage() {
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Sticky mobile CTA
            let lastScrollTop = 0;
            const stickyBar = document.getElementById('stickyMobileCTA');

            window.addEventListener('scroll', function () {
                let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (window.innerWidth < 768) {
                    if (scrollTop > 300) {
                        stickyBar.style.transform = 'translateY(0)';
                    } else {
                        stickyBar.style.transform = 'translateY(100%)';
                    }
                }

                lastScrollTop = scrollTop;
            });

            // Scroll progress bar
            const scrollProgress = document.getElementById('scrollProgress');
            window.addEventListener('scroll', function () {
                const scrollTop = window.pageYOffset;
                const docHeight = document.body.scrollHeight - window.innerHeight;
                const scrollPercent = (scrollTop / docHeight) * 100;
                scrollProgress.style.width = scrollPercent + '%';
            });
        }

        // Quantity controls
        function increaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            quantityInput.value = parseInt(quantityInput.value) + 1;
            calculatePrice();
        }

        function decreaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
                calculatePrice();
            }
        }

        // Price calculation
        function calculatePrice() {
            const standeeType = document.getElementById('standeeType');
            const size = document.getElementById('size');
            const printType = document.getElementById('printType');
            const printMedia = document.getElementById('printMedia');
            const quantity = document.getElementById('quantity');

            // Get base price from standee type
            basePrice = parseInt(standeeType.selectedOptions[0].dataset.price);

            // Apply multipliers
            let sizeMultiplier = parseFloat(size.selectedOptions[0].dataset.multiplier);
            let printMultiplier = parseFloat(printType.selectedOptions[0].dataset.multiplier);
            let mediaMultiplier = parseFloat(printMedia.selectedOptions[0].dataset.multiplier);

            // Calculate unit price
            let unitPrice = basePrice * sizeMultiplier * printMultiplier * mediaMultiplier;

            // Apply quantity discounts
            let quantityValue = parseInt(quantity.value);
            let discount = 1;
            if (quantityValue >= 10) discount = 0.9; // 10% discount
            if (quantityValue >= 25) discount = 0.85; // 15% discount
            if (quantityValue >= 50) discount = 0.8; // 20% discount

            unitPrice = unitPrice * discount;
            currentPrice = unitPrice * quantityValue;

            // Update display
            document.getElementById('totalPrice').textContent = `‚Çπ${Math.round(currentPrice).toLocaleString()}`;
            document.getElementById('unitPrice').textContent = `‚Çπ${Math.round(unitPrice).toLocaleString()}`;
            document.getElementById('mobileTotalPrice').textContent = `‚Çπ${Math.round(currentPrice).toLocaleString()}`;

            // Show discount badge if applicable
            const discountBadge = document.getElementById('discountBadge');
            if (discount < 1) {
                discountBadge.style.display = 'block';
                discountBadge.innerHTML = `<i class="fas fa-tag"></i> Save ${Math.round((1 - discount) * 100)}% today!`;
            } else {
                discountBadge.style.display = 'none';
            }
        }

        // Accordion functionality
        function toggleAccordion(id) {
            const content = document.getElementById(id + '-content');
            const icon = document.getElementById(id + '-icon');

            if (content.style.maxHeight && content.style.maxHeight !== '0px') {
                content.style.maxHeight = '0px';
                icon.style.transform = 'rotate(0deg)';
            } else {
                // Close all other accordions
                document.querySelectorAll('.accordion-content').forEach(acc => {
                    acc.style.maxHeight = '0px';
                });
                document.querySelectorAll('.accordion-content').forEach((acc, index) => {
                    const iconId = ['specs-icon', 'design-icon', 'printing-icon'][index];
                    if (iconId && document.getElementById(iconId)) {
                        document.getElementById(iconId).style.transform = 'rotate(0deg)';
                    }
                });

                // Open clicked accordion
                content.style.maxHeight = '500px';
                icon.style.transform = 'rotate(180deg)';
            }
        }

        // Delivery estimation
        function estimateDelivery() {
            const pincode = document.getElementById('pincode').value;
            const deliveryResult = document.getElementById('deliveryResult');

            if (pincode.length >= 6) {
                // Simulate API call
                setTimeout(() => {
                    deliveryResult.style.display = 'block';
                }, 500);
            } else {
                alert('Please enter a valid pincode');
            }
        }

        // Navbar functionality
        document.addEventListener('DOMContentLoaded', function () {
            const navbarToggle = document.getElementById('navbarToggle');
            const navbarMenu = document.getElementById('navbarMenu');
            const header = document.querySelector('.header');

            // Mobile menu toggle
            if (navbarToggle) {
                navbarToggle.addEventListener('click', function () {
                    navbarMenu.classList.toggle('active');
                    navbarToggle.classList.toggle('active');
                });
            }

            // Header scroll effect
            let lastScrollTop = 0;
            window.addEventListener('scroll', function () {
                let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > 100) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }

                // Hide/show navbar on scroll
                if (scrollTop > lastScrollTop && scrollTop > 200) {
                    header.classList.add('navbar-hidden');
                } else {
                    header.classList.remove('navbar-hidden');
                }

                lastScrollTop = scrollTop;
            });

            // Mega menu functionality
            const megaMenuItems = document.querySelectorAll('.mega-menu-item');

            megaMenuItems.forEach(item => {
                const megaMenu = item.querySelector('.mega-menu');
                let timeout;

                item.addEventListener('mouseenter', function () {
                    clearTimeout(timeout);
                    item.classList.add('mega-menu-active');
                });

                item.addEventListener('mouseleave', function () {
                    timeout = setTimeout(() => {
                        item.classList.remove('mega-menu-active');
                    }, 100);
                });

                if (megaMenu) {
                    megaMenu.addEventListener('mouseenter', function () {
                        clearTimeout(timeout);
                    });

                    megaMenu.addEventListener('mouseleave', function () {
                        timeout = setTimeout(() => {
                            item.classList.remove('mega-menu-active');
                        }, 100);
                    });
                }
            });

            // Theme toggle
            const themeToggle = document.getElementById('themeToggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function () {
                    const currentTheme = document.documentElement.getAttribute('data-theme');
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    document.documentElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                });

                // Load saved theme
                const savedTheme = localStorage.getItem('theme') || 'light';
                document.documentElement.setAttribute('data-theme', savedTheme);
            }
        });

        // Performance optimization - debounce price calculation
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Apply debouncing to quantity input
        document.addEventListener('DOMContentLoaded', function () {
            const quantityInput = document.getElementById('quantity');
            if (quantityInput) {
                quantityInput.addEventListener('input', debounce(calculatePrice, 300));
            }
        });
    </script>
